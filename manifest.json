{
  "manifest_version": 3,
  "name": "To-Do Make",
  "description": "Base Level Extension",
  "version": "1.0",
  "omnibox": { "keyword": "@i\t" },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "webNavigation"
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "images/logo128x128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popup.js",
        "todo_make.js"
      ]
    },
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://atoz.amazon.work/*"
      ],
      "js": [
        "assets/jquery-3.7.1.min.js",
        "send_content.js"
      ]
    }
  ]
}