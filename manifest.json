{
  "manifest_version": 3,
  "name": "To-Do Make",
  "description": "Base Level Extension",
  "version": "1.0",
  "omnibox": { "keyword": "@i\t" },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "unlimitedStorage",
    "webNavigation",
		"notifications",
		"alarms"
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "images/logo128x128.png"
  },
  "background": {
    "service_worker": "dist/bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/hello.html",
        "*://*/new_tab.html"
      ],
      "js": [
        "popup.js",
        "todo_make.js"
      ]
    },
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://atoz.amazon.work/*"
      ],
      "js": [
        "assets/jquery-3.7.1.min.js",
        "send_content.js"
      ]
    }
  ],
	"icons": {
    "16": "logo16x16.png",
    "32": "logo32x32.png",
    "48": "logo48x48.png",
    "128": "logo128x128.png"
  }
}